{
  "ConnectionStrings": {
    "NNewsContext": "${ConnectionStrings__NNewsContext}"
  },
  "NAuth": {
    "BucketName": "Emagine",
    "JwtSecret": "${JWT_SECRET}"
  },
  "NTools": {
    "ApiURL": "http://ntools-api:5001"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Warning",
      "NNews": "Information"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "[yyyy-MM-dd HH:mm:ss] ",
      "LogLevel": {
        "Default": "Information",
        "NNews": "Information"
      }
    }
  },
  "AllowedHosts": "*"
}